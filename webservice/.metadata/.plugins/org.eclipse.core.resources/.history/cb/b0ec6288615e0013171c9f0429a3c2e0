package webservice.resource;

import java.util.ArrayList;
import java.util.Iterator;

import javax.ws.rs.Path;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.DELETE;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.Consumes;
import javax.ws.rs.core.MediaType;




import webservice.database.DB_Connector;
//import webservice.database.DB_Connector;
import webservice.representations.Collection;
import webservice.representations.Post;

@Path("collections")
public class CollectionResource {
	DB_Connector dbcon = DB_Connector.getInstance();

	@GET
	@Produces(MediaType.APPLICATION_JSON)
	public String getCollections(){
		  String collections = new String();
		  collections="{";
		  dbcon.initDBConnection();
		  ArrayList<Collection> list = dbcon.getCollections();
		  int size = list.size()-1;
		  if(size<0){
			  collections=collections+"}";	
			}
		  for ( Iterator<Collection> i = list.iterator(); i.hasNext(); )
		  {
			if(size==0){
				collections=collections+i.next().toString()+"}";	
			}
			else{
				collections=collections+i.next().toString()+",";
			}
		    size=size-1;
		  }
		  return collections;
	  }

	@POST
	@Consumes(MediaType.APPLICATION_JSON)
	public void createCollection(Collection collection){
		dbcon.initDBConnection();
		dbcon.createCollection(collection);
	}
/*	
	@PUT
	@Consumes(MediaType.APPLICATION_JSON)
	
	@DELETE
	@Consumes(MediaType.APPLICATION_JSON)
	//Delete Collection
*/	
	@GET @Path("/?filter={name}")
	@Produces(MediaType.APPLICATION_JSON)
	public String getCollectionByName(@PathParam("name") String name){
		  String collection = new String();
		  collection="{";
		  dbcon.initDBConnection();
		  ArrayList<Collection> list = dbcon.getCollectionsByName(name);
		  int size = list.size()-1;
		  if(size<0){
			  collection=collection+"}";	
			}
		  for ( Iterator<Collection> i = list.iterator(); i.hasNext(); )
		  {
			if(size==0){
				collection=collection+i.next().toString()+"}";	
			}
			else{
				collection=collection+i.next().toString()+",";
			}
		    size=size-1;
		  }
		  return collection;
	  }
	
	
	@GET
	@Path("collections/{ID}/posts")
	@Produces(MediaType.APPLICATION_JSON)
	public String getPostsByCollection(@PathParam("id") int id){
		  String posts = new String();
		  posts="{";
		  dbcon.initDBConnection();
		  ArrayList<Post> list = dbcon.getPostsByCollection(id);
		  int size = list.size()-1;
		  if(size<0){
			  posts=posts+"}";	
			}
		  for ( Iterator<Post> i = list.iterator(); i.hasNext(); )
		  {
			if(size==0){
				posts=posts+i.next().toString()+"}";	
			}
			else{
				posts=posts+i.next().toString()+",";
			}
		    size=size-1;
		  }
		  return posts;
	  }
}

	

